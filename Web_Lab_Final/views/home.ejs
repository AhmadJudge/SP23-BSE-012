  <style>

    /* General Card Styling */
    .custom-card {
        border: none;
        border-radius: 10px;
        background: linear-gradient(135deg, #f7e8d4, #fdfdfd); 
        box-shadow: 6px 6px 12px #d1d1d1, -6px -6px 12px #ffffff;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .custom-card:hover {
        transform: scale(1.05);
        box-shadow: 8px 8px 16px #cfcfcf, -8px -8px 16px #ffffff;
    }

    /* Category Styling */
    .card-category {
        font-size: 0.9rem;
        font-weight: bold;
        color: #ff5722;
        margin-bottom: 5px;
    }

    /* Title Styling */
    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }

    /* Description Styling */
    .card-description {
        font-size: 0.95rem;
        color: #666;
        line-height: 1.5;
    }

    /* Footer Styling */
    .card-footer {
        background-color: #f8f9fa;
        padding: 10px 15px;
        border-top: 1px solid #e0e0e0;
    }

    .price {
        font-size: 1rem;
        font-weight: bold;
        color: #007bff;
    }

    /* Button Styling */
    .btn-custom {
        background-color: #28a745;
        color: #fff;
        padding: 8px 12px;
        border: none;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-custom:hover {
        background-color: #218838;
        transform: translateY(-3px);
    }

    .btn-custom:active {
        transform: scale(0.95);
    }
  </style>
</head>
